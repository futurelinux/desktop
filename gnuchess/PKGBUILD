pkgname=gnuchess
pkgver=6.2.6
pkgrel=1
pkgdesc="Application able to play chess (against another software or a human)"
url="http://www.gnu.org/software/chess/chess.html"
arch=('x86_64')
license=('GPL3')
depends=('bash')
source=(https://ftp.gnu.org/pub/gnu/chess/$pkgname-$pkgver.tar.gz)
sha256sums=('d617f875d6411378c6ce521663ebda42db9006a5eb5706bcd821a918c06eb04f')

build() {
  cd $srcdir/$pkgname-$pkgver
  ./configure --prefix=/usr
  make
}

package() {
  cd $srcdir/$pkgname-$pkgver
  make prefix=$pkgdir/usr install
}
